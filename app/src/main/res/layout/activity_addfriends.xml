<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:id="@+id/add_friend_popup"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

    <AutoCompleteTextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/friendname"
        android:hint="Type in Username"
        android:gravity="center"
        android:textColor="@color/Black"
        style="?android:attr/autoCompleteTextViewStyle"
        android:background="@drawable/edit_text_background" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:src="@drawable/ic_action_action_done"
        android:id="@+id/addfriend"
        style="?android:attr/buttonBarStyle"
        android:layout_toRightOf="@id/friendname"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:src="@drawable/ic_action_content_clear"
            android:id="@+id/cancel"
            style="?android:attr/buttonBarStyle"
            android:layout_toRightOf="@id/friendname"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:background="#ff39e18d"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:textColor="@color/White"
        android:text="Friends"/>

    <ListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:textColor="@color/Black"
        android:layout_weight="1" />
</LinearLayout>
